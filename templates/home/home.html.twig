{% extends 'base.html.twig' %}

{% block title %}HomeController!{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{#    <link rel="stylesheet" href="/css/styles.css">#}
{#    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />#}
{#    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">#}
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" type="text/css" href="/styles/category.css">

{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
        {% for article in articles %}
        <div class="col-md-3 col-sm-6">
            <div class="product-grid2">
                <div class="product-image2">
                    <a href="{{ path('description',{id : article.id}) }}">
                        <img class="pic-1" src="/uploads/{{ article.image }}">
                        <img class="pic-2" src="/uploads/{{ article.image }}">
                    </a>
                    <ul class="social">
                        <li><a href="{{ path('description',{id : article.id}) }}" data-tip="Quick View"><i class="fa fa-eye"></i></a></li>
                        <li><a href="#" data-tip="Add to Wishlist"><i class="fa fa-shopping-bag"></i></a></li>
                        <li><a href="{{ path('add_cart',{id : article.id}) }}" data-tip="Add to Cart"><i class="fa fa-shopping-cart"></i></a></li>
                    </ul>
                </div>
                <div class="product-content">
                    <h3 class="title"><a href="{{ path('description',{id : article.id}) }}">{{ article.NomArticle }}</a></h3>
                    <span class="price">${{ article.prix }}</span>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    </div>

    <div class="row page_nav_row">
        <div class="col">
            <div class="page_nav">
                <ul class="d-flex flex-row align-items-start justify-content-center">
                    <li class="active"><a href="#">01</a></li>
                    <li><a href="#">02</a></li>
                    <li><a href="#">03</a></li>
                    <li><a href="#">04</a></li>
                </ul>
            </div>
        </div>
    </div>
    </div>

{% endblock %}
{% block javascripts %}
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
{% endblock %}
