{% extends 'base.html.twig' %}

{% block Title %}Contact{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="/css/contact.css" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="container contact">
        <div class="row">
            <div class="col-md">
                <div class="contact-info">
                    <img src="https://image.ibb.co/kUASdV/contact-image.png" alt="image"/>
                    <h2>Contact Us</h2>
                </div>
            </div>
            <div class="col-md-9">
                {{ form_start(form,{'attr' : {'class' : 'row contact_form'}}) }}
                <div class="contact-form">
                    <div class="form-group">
                        <div class="col-sm-10">
                            {{ form_row(form.name,{'label' :'First Name:', 'attr' : {'placeholder' : 'Enter Your Name','class' : 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            {{ form_row(form.email,{'label' :'Email :', 'attr' : {'placeholder' : 'Enter Your Email Address','class' : 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            {{ form_row(form.comment,{'label' :'Comment :', 'attr' : {'placeholder' : 'Enter Your Message','class' : 'form-control','rows' : '5'}}) }}
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
{% block javascripts %}
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
{% endblock %}